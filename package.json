{
  "name": "training-management-system",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "pnpm run build:generate && nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "tsc --noEmit && nest start --watch",
    "start:debug": "tsc --noEmit && nest start --debug --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "build:migrate": "prisma migrate dev",
    "build:generate": "npx prisma generate",
    "# API Gateway": "",
    "start:gateway": "nest start api-gateway --watch",
    "start:gateway:debug": "nest start api-gateway --debug --watch",
    "start:gateway:prod": "node dist/apps/api-gateway/main",
    "build:gateway": "nest build api-gateway",
    "# Individual Apps - Development": "",
    "start:users": "nest start users --watch",
    "start:auth": "nest start auth --watch",
    "start:gyms": "nest start gyms --watch",
    "start:bookings": "nest start bookings --watch",
    "start:payments": "nest start payments --watch",
    "start:trainers": "nest start trainers --watch",
    "# Individual Apps - Debug": "",
    "start:users:debug": "nest start users --debug --watch",
    "start:auth:debug": "nest start auth --debug --watch",
    "start:gyms:debug": "nest start gyms --debug --watch",
    "start:bookings:debug": "nest start bookings --debug --watch",
    "start:payments:debug": "nest start payments --debug --watch",
    "start:trainers:debug": "nest start trainers --debug --watch",
    "# Individual Apps - Production": "",
    "start:users:prod": "node dist/apps/users/main",
    "start:auth:prod": "node dist/apps/auth/main",
    "start:gyms:prod": "node dist/apps/gyms/main",
    "start:bookings:prod": "node dist/apps/bookings/main",
    "start:payments:prod": "node dist/apps/payments/main",
    "start:trainers:prod": "node dist/apps/trainers/main",
    "# Build Individual Apps": "",
    "build:users": "nest build users",
    "build:auth": "nest build auth",
    "build:gyms": "nest build gyms",
    "build:bookings": "nest build bookings",
    "build:payments": "nest build payments",
    "build:trainers": "nest build trainers",
    "# Build All Apps": "",
    "build:all": "npm run build:users && npm run build:auth && npm run build:gyms && npm run build:bookings && npm run build:payments && npm run build:trainers && npm run build:gateway",
    "# Swagger Documentation": "",
    "docs:open": "open http://localhost:3000/api",
    "docs:users": "open http://localhost:3001/api",
    "docs:auth": "open http://localhost:3002/api",
    "docs:gyms": "open http://localhost:3003/api",
    "docs:bookings": "open http://localhost:3004/api",
    "docs:payments": "open http://localhost:3005/api",
    "docs:trainers": "open http://localhost:3006/api",
    "# Testing Individual Apps": "",
    "test:users": "jest --testPathPattern=users",
    "test:auth": "jest --testPathPattern=auth",
    "test:gyms": "jest --testPathPattern=gyms",
    "test:bookings": "jest --testPathPattern=bookings",
    "test:payments": "jest --testPathPattern=payments",
    "test:trainers": "jest --testPathPattern=trainers",
    "# PM2 Development Scripts": "",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "pm2:logs:gateway": "pm2 logs api-gateway-dev",
    "pm2:logs:users": "pm2 logs users-dev",
    "pm2:logs:auth": "pm2 logs auth-dev",
    "pm2:logs:gyms": "pm2 logs gyms-dev",
    "pm2:logs:bookings": "pm2 logs bookings-dev",
    "pm2:logs:payments": "pm2 logs payments-dev",
    "pm2:logs:trainers": "pm2 logs trainers-dev",
    "# PM2 Gateway Scripts": "",
    "pm2:start:gateway": "pm2 start ecosystem.config.js --only api-gateway-dev",
    "pm2:stop:gateway": "pm2 stop api-gateway-dev",
    "pm2:restart:gateway": "pm2 restart api-gateway-dev",
    "pm2:start:services": "pm2 start ecosystem.config.js --ignore api-gateway-dev",
    "pm2:start:all": "pm2 start ecosystem.config.js",
    "# PM2 Utility Scripts": "",
    "pm2:flush": "pm2 flush",
    "pm2:reset": "pm2 reset all",
    "pm2:monitor": "pm2 monit",
    "dev": "npm run pm2:start",
    "dev:stop": "npm run pm2:stop",
    "dev:logs": "npm run pm2:logs",
    "# Docker Commands": "",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "docker:restart": "docker-compose restart"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.3",
    "@types/bcryptjs": "^3.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.28.0",
    "jest": "^30.0.0",
    "pm2": "^6.0.8",
    "prettier": "^3.5.3",
    "prisma": "^6.9.0",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.9.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "nestjs-pino": "^4.4.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pino-pretty": "^13.0.0",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  }
}